<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
				   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
				   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">
	<changeSet id="201704081137-1" author="jtomic">
		<createTable tableName="location">
			<column name="id" type="BIGINT" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="name" type="VARCHAR(1024)">
				<constraints unique="true"/>
			</column>
			<column name="latitude" type="NUMERIC(10,6)"/>
			<column name="longitude" type="NUMERIC(10,6)"/>
		</createTable>
		<createTable tableName="image">
			<column name="id" type="BIGINT" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="path" type="VARCHAR(1024)"/>
			<column name="location_id" type="BIGINT">
				<constraints nullable="false"
							 foreignKeyName="fk_image_location"
							 referencedTableName="location"
							 referencedColumnNames="id" />
			</column>
		</createTable>
	</changeSet>
	<changeSet id="201704081220-2" author="jtomic">
		<createTable tableName="channel">
			<column name="id" type="BIGINT" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="slack_id" type="BIGINT">
				<constraints unique="true" />
			</column>
			<column name="name" type="VARCHAR(1024)" />
			<column name="location_id" type="BIGINT">
				<constraints nullable="false"
							 foreignKeyName="fk_channel_location"
							 referencedTableName="location"
							 referencedColumnNames="id" />
			</column>
		</createTable>
	</changeSet>
</databaseChangeLog>